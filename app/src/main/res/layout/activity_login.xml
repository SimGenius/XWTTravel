<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/baseLayout"
    tools:context="com.wt.xwttravel.activity.LoginActivity"
    android:background="@color/divider_light_gray_darker2">

    <FrameLayout

        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bar_red"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_back"/>

        <Button

            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_black"/>

        <AbsoluteLayout
            android:layout_marginTop="10dp"
            android:background="#22ffffff"
            android:layout_marginLeft="49dp"
            android:layout_width="1dp"
            android:layout_height="30dp">

        </AbsoluteLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="需要登录"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginLeft="60dp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="注册"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/btn_black"
            android:textSize="12dp"
            android:layout_gravity="right|center_vertical"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="用户名/邮箱/手机号"
            android:gravity="left|center_vertical"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:background="#fff"/>

        <include layout="@layout/divider_line_darker"/>

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="密码 [同时包含大/小写字母和数字]"
            android:gravity="left|center_vertical"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:background="#fff"/>

        <Button
            android:id="@+id/btnForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#555"
            android:text="忘记密码"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="登录"
            android:textColor="#fff"

            android:background="#d0584d"/>

    </LinearLayout>



    

</RelativeLayout>
