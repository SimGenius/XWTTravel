<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="50dp"
    android:background="#fff">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">
    <view
        android:layout_width="match_parent"
        android:layout_height="240dp"
        class="android.support.v4.view.ViewPager"
        android:id="@+id/viewPager"
        android:background="@color/title_bar"

        />

        <LinearLayout
            android:id="@+id/dots"
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">

            <!--<ImageView-->
                <!--android:id="@+id/dot1"-->
                <!--android:layout_margin="2dp"-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:src="@drawable/dot_white_selected"/>-->



        </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="120dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:text="TITLETITLETITLETITLETITLETITLETITLETITLETITLETITLETITLETITLETITLETITLETITLETITLE"
            android:maxLines="2"/>

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:layout_height="42dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_orange"
            android:text="￥1299 购买"
            android:padding="5dp"
            android:textColor="#fff"
            android:textSize="18dp"/>

    </FrameLayout>

    <include layout="@layout/divider_line_darker2"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="100dp"
            android:paddingLeft="10dp"
            android:text="2016年12月22日 - 2016年12月23日 共2天"
            android:gravity="center_vertical"
            android:textColor="#888"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/txtSold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingRight="14dp"
            android:text="100人已参加"
            android:gravity="right|center_vertical"
            android:textColor="#888"
            android:textSize="12dp"
            android:layout_gravity="right"
            />

    </FrameLayout>

    <include layout="@layout/divider_line_darker2"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/location"/>

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="14dp"
            android:text="位置位置位置位置"
            android:layout_marginLeft="40dp"
            android:textColor="#888"
            android:textSize="12dp"
            android:layout_gravity="left|center_vertical"
            />



        <Button
            android:id="@+id/btnLocation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#888"
            android:textSize="12dp"
            android:text="在地图上显示"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:background="@drawable/btn_white"
            />


    </FrameLayout>

    <include layout="@layout/divider_line_darker2"/>

    <TextView
        android:id="@+id/txtImportant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="【饿了么】亲爱的会员用户，感谢您对饿了么的支持，春节将至，饿骑士们也要和家人团聚了，饿配送将在2月6日至2月15日停止运营，为了保障亲们的权益，特将您的会员卡有效期延长10天，有效期至2016年3月22日，来年饿了么继续和您一起拼！"
        android:textColor="#555"
        android:textSize="14dp"
        android:layout_gravity="right"
        />

    <include layout="@layout/divider_line_darker2"/>

    <Button
        android:id="@+id/btnDetail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_white"
        android:text="查看图文详情"
        android:textSize="14dp"
        android:textColor="#7dc"/>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/divider_light_gray_darker2">

    </AbsoluteLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="大家说"
        android:textSize="16dp"
        />

</LinearLayout>